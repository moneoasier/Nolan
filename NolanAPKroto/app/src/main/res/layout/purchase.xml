<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/fondonolan">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="124dp"
        android:layout_height="31dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="135dp"
        android:fontFamily="sans-serif-black"
        android:text="CARRITO"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spin_partner"
        android:layout_width="303dp"
        android:layout_height="34dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="19dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/tabla"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="113dp"
        android:layout_height="19dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="238dp"
        android:layout_marginBottom="12dp"
        android:text="SELECT PARTNER"
        android:textColor="@color/fondo_cosa"
        app:layout_constraintBottom_toTopOf="@+id/spin_partner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TableLayout
        android:id="@+id/tabla"
        android:layout_width="311dp"
        android:layout_height="197dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="57dp"
        android:background="@drawable/buton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spin_partner">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="79dp">

            <TextView
                android:id="@+id/T_item"
                android:layout_width="97dp"
                android:layout_height="35dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="  ITEM"
                android:textAlignment="center"
                android:textColor="@color/fondo_cosa" />

            <TextView
                android:id="@+id/T_qty"
                android:layout_width="61dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="QTY"
                android:textAlignment="center"
                android:textColor="@color/fondo_cosa" />

            <TextView
                android:id="@+id/T_Precio"
                android:layout_width="87dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:text="PRICE"
                android:textAlignment="center"
                android:textColor="@color/fondo_cosa" />

            <TextView
                android:id="@+id/T_Drop"
                android:layout_width="62dp"
                android:layout_height="match_parent" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/txt_Subtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="70dp"
        android:text="0"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabla" />

    <TextView
        android:id="@+id/txt_iva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="70dp"
        android:text="0"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Subtotal" />

    <TextView
        android:id="@+id/txt_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="68dp"
        android:text="0"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_iva" />

    <Button
        android:id="@+id/btn_Tramitar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="74dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="49dp"
        android:onClick="tramitar"
        android:text="Purchase"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabla" />

    <Button
        android:id="@+id/button"
        android:layout_width="134dp"
        android:layout_height="40dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="40dp"
        android:onClick="bezeroberri"
        android:text="new partner"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="44dp"
        android:fontFamily="sans-serif-black"
        android:text="Subtotal"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/txt_Subtotal"
        app:layout_constraintTop_toBottomOf="@+id/tabla" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="40dp"
        android:layout_height="22dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="sans-serif-black"
        android:text="IVA"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintEnd_toStartOf="@+id/txt_iva"
        app:layout_constraintStart_toEndOf="@+id/btn_Tramitar"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="250dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="52dp"
        android:fontFamily="sans-serif-black"
        android:text="Total"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/txt_total"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="142dp"
        android:layout_height="108dp"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tabla"
        app:srcCompat="@drawable/linea" />

</androidx.constraintlayout.widget.ConstraintLayout>